# GameMarket Pro - Environment Configuration
# Скопируйте этот файл в .env и настройте под свою среду

# ===== ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ =====
APP_NAME="GameMarket Pro"
APP_URL="http://localhost:8000"
APP_DEBUG=true
APP_TIMEZONE="Europe/Moscow"

# ===== НАСТРОЙКИ БАЗЫ ДАННЫХ =====
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gamemarket_pro
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# ===== НАСТРОЙКИ БЕЗОПАСНОСТИ =====
SESSION_LIFETIME=86400
PASSWORD_MIN_LENGTH=6
MAX_LOGIN_ATTEMPTS=5

# ===== НАСТРОЙКИ ФАЙЛОВ =====
MAX_FILE_SIZE=5242880
UPLOAD_PATH=storage/uploads/
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# ===== НАСТРОЙКИ КОМИССИЙ =====
DEFAULT_COMMISSION_RATE=0.05
PREMIUM_COMMISSION_RATE=0.03

# ===== НАСТРОЙКИ EMAIL (для будущего использования) =====
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@gamemarket.pro
MAIL_FROM_NAME="GameMarket Pro"

# ===== НАСТРОЙКИ ПЛАТЕЖЕЙ (для будущего использования) =====
PAYMENT_YOOMONEY_SHOP_ID=
PAYMENT_YOOMONEY_SECRET=
PAYMENT_QIWI_SECRET=
PAYMENT_PAYPAL_CLIENT_ID=
PAYMENT_PAYPAL_SECRET=

# ===== НАСТРОЙКИ ВНЕШНИХ API =====
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# ===== НАСТРОЙКИ ЛОГИРОВАНИЯ =====
LOG_LEVEL=debug
LOG_FILE=storage/logs/app.log

# ===== НАСТРОЙКИ КЕШИРОВАНИЯ =====
CACHE_DRIVER=file
CACHE_PREFIX=gamemarket_
CACHE_LIFETIME=3600

# ===== НАСТРОЙКИ СЕССИЙ =====
SESSION_DRIVER=file
SESSION_COOKIE_NAME=gamemarket_session
SESSION_COOKIE_LIFETIME=86400

# ===== НАСТРОЙКИ ПРОИЗВОДСТВА =====
# Для продакшена установите APP_DEBUG=false
# Настройте безопасные пароли
# Используйте HTTPS (APP_URL=https://yourdomain.com)