{
    "name": "escrow-bot/telegram-escrow-service",
    "description": "Telegram Bot для гарантийных услуг с веб админ-панелью",
    "type": "project",
    "keywords": ["telegram", "bot", "escrow", "php", "guarantor"],
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-session": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "EscrowBot\\": "classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "install-db": "mysql -u root -p < database.sql"
    }
}